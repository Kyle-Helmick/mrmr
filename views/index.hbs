<div class="wrapper">
  <header class="topbar">
    <img src="images/mrmr_logo.svg" alt="mrmr" class="image"></img>
  </header>
  <article class="chat" id="chat">
    <img src="images/pen.svg" alt="PEN" class="bg-image"></img>
    <ul id="chat-insert">
    </ul>
